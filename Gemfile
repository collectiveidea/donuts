source "https://rubygems.org"

# Ruby
ruby "2.3.3"

# Rails
gem "rails", "4.2.5"

# Database
gem "pg"

# Server
gem "puma"

# Assets
gem "coffee-rails"
gem "jquery-rails"
gem "sass-rails"
gem "uglifier"

# Configuration
gem "figaro"

# Authentication
gem "omniauth-github"

gem "active_model_serializers"

group :development, :test do
  gem "capybara"
  gem "database_cleaner"
  gem "factory_girl_rails"
  gem "pry-rails"
  gem "rspec-rails"
end

group :production do
  gem "rails_12factor"
end
